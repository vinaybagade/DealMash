<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text = "DealMash" android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/signupapplabel"
        android:textSize = "35dp"
        android:layout_centerHorizontal = "true"
        android:textStyle="bold"/>

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/signupusername"
        android:hint = "Username"
        android:focusable = "true"
        android:layout_marginTop = "37dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/signupapplabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/signupuseremail"
        android:layout_alignEnd="@+id/signupuseremail" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/signupuseremail"
        android:hint = "Email Address"
        android:focusable = "true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/signupusername"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:focusable = "true"

        android:id="@+id/signuppassword"
        android:hint="Password"
        android:layout_below="@+id/signupuseremail"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/signupuseremail"
        android:layout_alignStart="@+id/signupuseremail"
        android:layout_alignRight="@+id/signupuseremail"
        android:layout_alignEnd="@+id/signupuseremail" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:id="@+id/signupbutton"
        android:layout_below="@+id/signupuseremail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a member? Back to Login"
        android:id="@+id/redirecttosignin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp" />

</RelativeLayout>
